{
  "name": "yaspet-angular",
  "version": "1.0.1",
  "description": "Yaspet ( aka Yet Another Starter Pack for Electron Typescript ) use Electron 4, Angular for render process and Typescript 3 for main process.",
  "author": "Ravidhu Dissanayake <contact@ravidhu.com>",
  "main": "app/build/back/init.js",
  "scripts": {
    "lint": "ng lint",
    "e2e": "ng e2e",
    "build-front": "./node_modules/.bin/ng build",
    "build-back": "rm -rf app/build/back/* && ./node_modules/.bin/tsc -p tsconfig.back.json",
    "build": "npm run build-back && yarn run build-front",
    "dev-front": "./node_modules/.bin/ng serve",
    "dev-back": "./node_modules/.bin/nodemon -V --watch 'app/src/back/**/*' -e ts --exec 'yarn run build-back && NODE_ENV=development ./node_modules/.bin/electron .'",
    "dev": "npm run dev-front & yarn run dev-back",
    "test-front": "./node_modules/.bin/ng test",
    "test-back": "./node_modules/.bin/ts-node --project tsconfig.back.json node_modules/jasmine/bin/jasmine \"app/src/back/tests/**/*spec.ts\" --config=./app/src/back/tests/jasmine.json",
    "test": "npm run test-front && yarn run test-back"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^7.2.15",
    "@angular/common": "^7.2.15",
    "@angular/compiler": "^7.2.15",
    "@angular/core": "^7.2.15",
    "@angular/forms": "^7.2.15",
    "@angular/platform-browser": "^7.2.15",
    "@angular/platform-browser-dynamic": "^7.2.15",
    "@angular/router": "^7.2.15",
    "core-js": "^2.6.9",
    "rxjs": "~6.3.3",
    "tslib": "^1.10.0",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^15.0.4",
    "@angular/cli": "^7.3.9",
    "@angular/compiler-cli": "^7.2.15",
    "@angular/language-service": "^7.2.15",
    "@types/jasmine": "~2.8.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "codelyzer": "~4.5.0",
    "electron": "^4.2.4",
    "electron-reload": "^1.4.0",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~3.1.1",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "^2.0.5",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "nodemon": "^1.19.1",
    "protractor": "~5.4.0",
    "ts-node": "~7.0.0",
    "tslint": "~5.11.0",
    "typescript": "~3.2.2"
  }
}
